<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body {
            background: rgb(116, 226, 241);
          }
          
          #login {
            width: 35%;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            background-color: #f9f7f7;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
          }
          
          #login form {
            margin-top: 20px;
          }
          
          .form-group {
            margin-bottom: 15px;
          }
          
          #submit {
            width: auto;
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            border: none;
            cursor: pointer;
          }
          
          #submit:hover {
            background-color: #0056b3;
          }
          
          .form-control {
            border-radius: 10px;
          }
          
          a {
            color: #007bff;
            text-decoration: none;
          }
          
          a:hover {
            color: #0056b3;
          }
          
          #button {
            width: 100%;
          }
    </style>
  </head>
  <body>
    <div id="login">
      <h2 class="text-center">Create Account</h2>
      <form method="POST" action="/create">
        <div class="form-group">
          <label for="username">Username</label>
          <input type="text" class="form-control" id="username" name="username" placeholder="Enter username">
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" class="form-control" id="password" name="password" placeholder="Enter password">
        </div>
        <div class="form-group">
          <label for="inputConfirmPassword">Confirm Password</label>
          <input type="password" class="form-control" id="inputConfirmPassword" placeholder="Confirm Password">
        </div>
        <div class="form-group">
          <label for="inputMobile">Mobile Number</label>
          <input type="tel" class="form-control" id="inputMobile" placeholder="Mobile Number">
        </div>
        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="inputCity">City</label>
            <input type="text" class="form-control" id="inputCity" placeholder="City">
          </div>
          <div class="form-group col-md-6">
            <label for="inputZip">Pincode</label>
            <input type="text" class="form-control" id="inputZip" placeholder="Pincode">
          </div>
        </div>
        <div class="form-group">
          <button type="submit" class="form-control btn btn-dark" id="button">Create Account</button>
        </div>
      </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>